---
import { Icon } from 'astro-icon';
import Up from './PageNav/Up.astro';
import Footer from './Footer.astro';
---

<section
  id='contact'
  class='section contact__container'
>
  <Up destination='technologies' />
  <form
    class='contact__form'
    action='mailto: graynance@gmail.com'
  >
    <h2 class='section__title'>Reach Out</h2>
    <p class='contact__body'>
      I'm excited to bring my experience to any new projects or opportunities, so please feel free to reach out. I would
      love any chance to connect, and my inbox is always open. I'm looking forward to hearing from you...
    </p>
    <a
      aria-label='Gray Nance Resume'
      class='contact__resume'
      href='/Nance_Gray_Resume.pdf'
      rel='noreferrer'
      target='_blank'
    >
      Resume
    </a>
    <input
      class='contact__mailto'
      type='submit'
      value='Say Hi!'
    />
  </form>

  <!-- CUSTOM TOP NAVIGATOR -->
  <div class='down__container'>
    <a
      href='#top'
      class='link'
    >
      <div><Icon name='ic:outline-arrow-upward' /></div>
      <div class='top__nav__text'>top</div>
    </a>
    <Footer />
  </div>
</section>

<style lang='css'>
  [astro-icon] {
    width: 40px;
  }

  .contact__body {
    margin: 0 auto;
    max-width: 500px;
    text-align: center;
  }

  .contact__container {
    /* height: 91.5vh; */
  }

  .contact__form {
    align-items: center;
    display: flex;
    flex-direction: column;
  }

  .contact__mailto,
  .contact__resume {
    background-color: var(--color-bg);
    border: 1px solid;
    border-radius: 0.1em;
    box-shadow: var(--shadow);
    cursor: pointer;
    font-size: 1.5em;
    margin-top: 3em;
    padding: 0.5em 1em;
    transition: color 0.167s ease;
  }

  .contact__resume {
    align-items: center;
    display: flex;
    height: 63px;
    justify-content: center;
    width: 133px;
  }

  .contact__mailto:hover,
  .contact__resume:hover {
    color: var(--color-text-hover);
  }

  .down__container > a {
    align-items: center;
    display: flex;
    flex-direction: column;
  }

  .top__nav__text {
    margin-bottom: 0.5em;
  }
</style>
