---
import { Icon } from 'astro-icon';
import Down from './PageNav/Down.astro';
---

<section class='section intro__container'>
  <h1 class="welcome__wide">Hi! I'm Gray Nance.</h1>
  <h1 class="welcome__narrow">Gray Nance.</h1>
  <h3>Software Engineer.</h3>
  <div class='intro__links'>
    <a
      aria-label='Gray Nance Resume'
      class='link about__link'
      href='/Nance_Gray_Resume.pdf'
      rel='noreferrer'
      target='_blank'
    >
      <Icon name='mdi:resume' />
    </a>
    <a
      aria-label='Gray Nance LinkedIn'
      class='link about__link'
      href='https://www.linkedin.com/in/gray-nance/'
      rel='noreferrer'
      target='_blank'
    >
      <Icon name='simple-icons:linkedin' />
    </a>
    <a
      aria-label='Gray Nance GitHub'
      class='link about__link'
      href='https://github.com/g-wn'
      rel='noreferrer'
      target='_blank'
    >
      <Icon name='simple-icons:github' />
    </a>
    <a
      aria-label='Gray Nance AngelList / Wellfound'
      class='link about__link'
      href='https://angel.co/u/gray-nance'
      rel='noreferrer'
      target='_blank'
    >
      <Icon name='simple-icons:angellist' />
    </a>
  </div>
  <div class='down__container'>
    <Down destination='about' />
  </div>
</section>

<style lang='css'>
  .about__link {
    width: 25px;
  }

  .down__container {
    margin-bottom: 1em;
  }

  .intro__container {
    align-items: center;
    display: flex;
    flex-direction: column;
    gap: 1em;
    height: 90.5vh;
    justify-content: center;
  }

  .intro__links {
    align-items: center;
    display: flex;
    gap: 1em;
    justify-content: center;
    margin-top: 1em;
    max-width: 500px;
    position: relative;
    text-align: center;
  }

  @media screen and (max-width: 600px) {
    .welcome__wide {
      display: none;
    }
  }

  @media screen and (min-width: 601px) {
    .welcome__narrow {
      display: none;
    }
  }
</style>
